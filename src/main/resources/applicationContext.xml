    <beans xmlns="http://www.springframework.org/schema/beans"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xmlns:context="http://www.springframework.org/schema/context"
           xsi:schemaLocation="http://www.springframework.org/schema/beans
	http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
	http://www.springframework.org/schema/context
	http://www.springframework.org/schema/context/spring-context-2.5.xsd">

    <context:component-scan base-package="com.javaCourse"/>

    <bean id="onePrepareService" class="com.javaCourse.servicesImplementation.ZenPreparationService"/>

    <bean id="oneBassPlayer" class="com.javaCourse.servicesImplementation.BassPlayer">
        <constructor-arg ref="onePrepareService"/>
    </bean>

    <bean id="guitarist" class="com.javaCourse.servicesImplementation.BassPlayer" scope="prototype">
        <constructor-arg ref="onePrepareService"/>
    </bean>
</beans>